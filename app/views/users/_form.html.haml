.form-box
  -if @user.errors.any? 
    .error-box   
      -@user.errors.full_messages.each do |error|
        .error
          =error

  = form_for @user do |f|
    .field-row
      =f.label :first_name, 'First name'
      =f.text_field :first_name

    .field-row
      =f.label :last_name, 'Last name'
      =f.text_field :last_name

    .field-row
      =f.label :email, 'Email'
      =f.text_field :email

    .field-row
      = f.submit nil, :class => 'button'