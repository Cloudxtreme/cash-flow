<h2>Login</h2>

<div class="form-box login-form">
  <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'form-vertical' }) do |f| %>
    <div class="field-row">
      <%= f.input :email, :autofocus => true %>
    </div>
    <div class="field-row">
      <%= f.input :password %>
    </div>
    <div class="field-row remember-me">
      <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
      <%= link_to = link_to "Forgot?", new_password_path('user'), :class => 'forgot-password' %>
    </div>
    

    <%= f.button :submit, "Login", :class => 'button button-primary' %>
  <% end %>
  
</div>